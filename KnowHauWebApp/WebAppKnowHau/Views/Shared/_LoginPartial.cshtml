@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>

                @if (User.Identity.GetUserName() == "toze")
                {
                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "EditaSuperAdmin", new { id = User.Identity.GetUserName() })
                }
                else
                {
                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "EditaAdmin", new { id = User.Identity.GetUserName() })
                }
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Logout</a></li>
        </ul>
    }

}

